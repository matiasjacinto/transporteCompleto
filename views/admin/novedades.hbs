<div class="container">
  <div class="row">
    <div class="col">
      <p class="text-end">
        hola
        {{usuario}}<a class="btn btn-danger">Cerrar sesion
          <i class="fas fa-sign-out-alt"></i></a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h3>listado de novedades</h3>
    </div>
    <div class="col-5 text-end">
      <a href="" class="btn btn-success"> <i class="fas fa-plus"></i> Nuevo</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>

          {{#each novedades}}

            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td class="text-end">
                <a href="" class="btn btn-secondary">
                  <i class="fas fa-pencil-alt"></i>
                  Modificar</a>
                <a href="" class="btn btn-secondary">
                  <i class="fas fa-trash-alt"></i>
                  Borrar</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>

  </div>

</div>

{{!usuario! viene de usuario: req.session.nombre, novedaesjs de admin}}